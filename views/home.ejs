<!-- slider section -->
<section>
  <div class="container-fluid card p-2">
    <div class="row">
      <div class="col-4">
        <div class="detail-box">
          <p class="mb-2">
            <strong> Comprehensive Platform for reliable.</strong><br />
            Job Opportunities and Internships.
          </p>
          <p class="">Get Discovered. Get Hired.</p>
          <div class="btn-box mt-3">
            <a href="/jobs" class="buttons btn btn-success btn-lg lbtn">
              I'm A Job Seeker
            </a>
            <button
              data-bs-toggle="modal"
              data-bs-target="#staticBackdrop"
              class="buttons btn btn-success btn-lg lbtn mx-2"
            >
              I'm A Recruiter
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
    class="modal fade"
    id="staticBackdrop"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="staticBackdropLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title bold" id="staticBackdropLabel">
            Experience easily!
          </h3>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form action="/register" method="post" class="p-2">
            <div class="mb-3">
              <div class="input-group">
                <span class="input-group-text">Name</span>
                <input
                  required
                  name="name"
                  type="text"
                  aria-label="name"
                  class="form-control"
                  placeholder="enter your name"
                />
              </div>
            </div>

            <div class="mb-3">
              <div class="input-group">
                <span class="input-group-text">Email</span>
                <input
                  required
                  name="email"
                  type="email"
                  aria-label="email"
                  class="form-control"
                  placeholder="enter your email"
                />
              </div>
            </div>
            <div class="mb-3">
              <div class="input-group">
                <span class="input-group-text">Password</span>
                <input
                  required
                  name="password"
                  type="password"
                  aria-label="password"
                  class="form-control"
                  placeholder="enter your password"
                />
              </div>
            </div>

            <button type="submit" class="btn btn-outline-success mt-2 lbtn">
              Register
            </button>
          </form>
        </div>
        <div
          class="modal-footer d-flex align-items-centre justify-content-between"
        >
          <div
            class="left d-flex flex-row align-items-centre justify-content-centre"
          >
            <!-- Button trigger login modal -->
            <span>Already registered?</span>
            <button
              type="button"
              class="btn btn-sm px-3 btn-outline-success"
              data-bs-toggle="modal"
              data-bs-target="#loginModal"
            >
              login
            </button>
          </div>
          <div class="right">
            <a href="#"><i class="text-primary bi bi-twitter"></i></a>
            <a href="#"><i class="text-danger bi bi-instagram"></i></a>
            <a href="#"><i class="text-info bi bi-facebook"></i></a>
            <a href="#"><i class="text-success bi bi-whatsapp"></i></a>
            <a href="#"><i class="text-primary bi bi-linkedin"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal for registeration -->

  <!-- Modal for login -->

  <div
    class="modal fade"
    id="loginModal"
    tabindex="-1"
    aria-labelledby="loginModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5 text-success" id="exampleModalLabel">
            Experience easily!
          </h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form action="/login" method="post" class="p-2">
            <div class="mb-3">
              <div class="input-group">
                <span class="input-group-text">Email</span>
                <input
                  required
                  name="email"
                  type="email"
                  aria-label="email"
                  class="form-control"
                  placeholder="enter your email"
                />
              </div>
            </div>
            <div class="mb-3">
              <div class="input-group">
                <span class="input-group-text">Password</span>
                <input
                  required
                  name="password"
                  type="password"
                  aria-label="password"
                  class="form-control"
                  placeholder="enter your password"
                />
              </div>
            </div>

            <button type="submit" class="btn btn-outline-success mt-2 lbtn">
              Login
            </button>
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-sm btn-danger"
            data-bs-dismiss="modal"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
